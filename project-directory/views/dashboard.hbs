<!-- views/dashboard.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        td.actions {
            white-space: nowrap;
        }
        button {
            padding: 6px 10px;
            margin-right: 5px;
            cursor: pointer;
        }
        button.delete {
            color: red;
        }
        header {
            background-color: #ff9100;
            padding: 10px;
            color: white;
            text-align: center;
        }
        footer {
            background-color: black;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .popup {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(190, 175, 35, 0.5);
            z-index: 1000;
        }
        .popup-content {
            background-color: white;
            margin: 20% auto;
            padding: 20px;
            width: 60%;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <header class="p-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h2 class="m-0">User Dashboard</h2>
            <button id="logoutButton" class="btn btn-primary">Logout</button>
        </div>
    </header>
 
    <div id="main-content" class="container mt-5">
        <div class="mb-3">
            <label for="fullName" class="form-label">Welcome, <span id="fullName">{{ fullName }}</span>!</label>
 
        </div>
 
        <table id="urlTable" class="table">
            <thead>
                <tr>
                    <th>Short ID</th>
                    <th>URL</th>
                    <th>Updated At</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Table rows will be dynamically populated -->
                {{#each urls}}
                <tr>
                    <td>{{ this.shortId }}</td>
                    <td><a href="{{ this.url }}" target="_blank">{{ this.url }}</a></td>
                    <td>{{ this.updatedAt }}</td>
                    <td class="actions">
                        <button onclick="editUrl('{{ this.shortId }}')" class="btn btn-primary">Edit</button>
                        <button onclick="deleteUrl('{{ this.shortId }}')" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    
        <div id="editPopup" class="popup">
            <div class="popup-content">
                <h2>Edit URL</h2>
                <form id="editUrlForm">
                    <label for="editedUrl" class="form-label">New URL:</label>
                    <input type="text" id="editedUrl" name="editedUrl" class="form-control" required pattern="https?://.+"><br><br>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <br>
                </form>
                <button onclick="closePopup()" class="btn btn-secondary">Cancel</button>
            </div>
        </div>
 
        <form id="addUrlForm" class="mt-4">
            <h3>Add URL</h3>
            <div class="mb-3">
                <label for="shortId" class="form-label">Short ID:</label>
                <input type="text" id="shortId" name="shortId" class="form-control" required minlength="3" maxlength="20"><br>
            </div>
            <div class="mb-3">
                <label for="url" class="form-label">URL:</label>
                <input type="text" id="url" name="url" class="form-control" required pattern="https?://.+"><br>
            </div>
            <button type="submit" class="btn btn-primary">Add URL</button>
        </form>
    </div>
    
    <footer class="p-3">
        <div class="container">
            &copy; {{ year }} User Dashboard App
        </div>
    </footer>
 
    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/dashboard.js"></script>
</body>
</html>
